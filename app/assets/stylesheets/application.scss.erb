 @import "bootstrap";
 $fa-font-path: '@fortawesome/fontawesome-free/webfonts';
 @import '@fortawesome/fontawesome-free/scss/fontawesome';
 @import '@fortawesome/fontawesome-free/scss/solid';
 @import '@fortawesome/fontawesome-free/scss/regular';
 @import '@fortawesome/fontawesome-free/scss/brands';
 @import '@fortawesome/fontawesome-free/scss/v4-shims';

.list-style-none li{
  list-style: none;
  text-align: right;
  margin-right: 10px;
}

.notifications {
  color: $white;
  text-align: center;
  width: 90%;
  border-radius: 10px;
  margin: 0 auto;
  .notice {
    background-color: lightBlue;
    border-radius: 10px;
  }
  .alert {
    background-color: alert_red;
    border-radius: 10px;
  }
}

.paginate-layout{
  margin: 0 auto;
  text-align: center;
}

.devise-container{
  width: 90%;
  margin: 0 auto;
  h2 {
    display: block;
    width: 100%;
    margin-left: 100px;
  }
}

.registration-table{
  border: thick double lightblue;
}

.registration-btn{
  position: fixed;
  bottom: 30px;
  right: 30px;
  display: block;
  width: 200px;
  margin-left: auto;
  text-align: center;
  font-size: 20px;
  color: white;
  border-radius: 10px;
}

.registration-img{
  width: 300px;
  object-fit: cover;
  border-radius: 10px;
  padding: 5px;
}

.session-table{
  border: thick double lightblue;
}

.session-btn{
  position: fixed;
  bottom: 30px;
  right: 30px;
  display: block;
  width: 200px;
  margin-left: auto;
  text-align: center;
  font-size: 20px;
  color: white;
  border-radius: 10px;
}

input[type="text"] {
  width: 90%;
  height: 40px;
}