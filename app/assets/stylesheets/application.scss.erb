body {
font-family: "Source Sans Pro", "Hiragino Kaku Gothic ProN", Meiryo, Arial, sans-serif;
}

.list-style-none li{
  list-style: none;
  margin-right: 10px;
}

.text-red{
  color: red; 
}

.block{
  display: block;
}

.hide{
  display: none;
}

.keep-right{
  text-align: right;
}

.cursor-pointer{
  cursor: pointer;
}

.notifications {
  animation-name: smooth-fadein-out;
  animation-duration: 10s;
  animation-timing-function: ease;
  animation-delay: 0s;
  animation-iteration-count: 1;
  animation-direction: alternate;
  opacity: 0;
  z-index: 10;
  position: fixed;
  top: 120px;
  right: 10px;
  color: $white;
  font-size: 20px;
  text-align: center;
  width: 350px;
  height: 200px;
  border-radius: 10px;
  margin: 0 auto;
  pointer-events: none;
  .notice {
    background-color: #17a2b8;
    border-radius: 10px;
  }
  .alert {
    background-color: red;
    border-radius: 10px;
  }
}

@keyframes smooth-fadein-out {
  0% {opacity: 1;}
  100% {opacity: 0;}
}

