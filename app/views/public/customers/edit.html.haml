.customer-edit-title
  %h2 アーティスト編集画面

= form_with model: [:public, @customer], local: true do |f|
  %table.table.table-striped.customer-edit-table{:width=>"100%",:border=>"1"}
    %colgroup
      %col{width: "19%"}
      %col{width: "81%"}
        %tr
          %th{scope:"row"} 画像
          %td
            = f.file_field :profile_image, accept: 'image/*'
            #edit-image
        %tr
          %th{scope:"row"} 名前
          %td
            = f.text_field :name
        %tr
          %th{scope:"row"} 性別
          %td
            = f.select :sex, Customer.enum_options_for_select(:sex)
        %tr
          %th{scope:"row"} 誕生日
          %td
            = f.date_field :birthday
        %tr
          %th{scope:"row"} パート
          %td
            = f.collection_check_boxes(:part_ids, Part.all, :id, :name) do |tag|
              = tag.label do
                = tag.check_box
                = tag.text
        %tr
          %th{scope:"row"} 活動場所
          %td 
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name
        %tr
          %th{scope:"row"} 活動ペース
          %td 週１くらい
        %tr
          %th{scope:"row"} 好きなアーティスト
          %td GLAY、Beatles
        %tr
          %th{scope:"row"} 作品URL
          %td http//~...
        %tr
          %th{scope:"row"} 自己紹介
          %td
            = f.text_area :introduction, size: "100x10"
        = f.submit "プロフィールを更新", class: "btn btn-info customer-edit-btn", data: { confirm: 'こちらの内容で更新します。よろしいですか？' }

%script
  enable_select2();
